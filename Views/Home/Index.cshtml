@model IEnumerable<Product>

@{
    ViewData["Title"] = "Games for Sale";
}

<h1 class="text-center text-light mb-4">Games for Sale</h1>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card bg-dark text-light h-100 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="Game Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <div class="mt-auto">
                            <!-- View Details Button -->
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm me-2">View Details</a>

                            <!-- Add to Cart Form -->
                            <form asp-action="AddToCart" asp-controller="Cart" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }
    h1 {
        font-size: 2rem;
        font-weight: bold;
    }
    .card {
        border: none;
        transition: transform 0.2s;
    }
    .card:hover {
        transform: scale(1.02);
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
</style>
