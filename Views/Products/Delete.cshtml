@model Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-light mb-4">Delete Product</h1>

<div class="container">
    <h3 class="text-warning text-center">Are you sure you want to delete this?</h3>
    <div class="card bg-dark text-light p-4 shadow-sm mt-4">
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="Game Image" style="width: 100%; max-height: 300px; object-fit: cover; border-radius: 4px;" />
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }
    .card {
        border-radius: 8px;
    }
    .text-warning {
        color: #ffc107;
    }
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
