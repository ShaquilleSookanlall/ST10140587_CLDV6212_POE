@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-center text-light mb-4">Product Details</h1>

<div class="container">
    <div class="card bg-dark text-light p-4 shadow-sm">
        <h4>Product Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="Product Image" style="width: 100%; max-height: 300px; object-fit: cover; border-radius: 4px;" />
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary btn-lg me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }
    .card {
        border-radius: 8px;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
